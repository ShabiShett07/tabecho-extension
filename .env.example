# TabEcho Environment Variables
# Copy this file to .env and fill in your values

# PayPal Configuration (for international customers)
# Get these from: https://developer.paypal.com/dashboard/applications
VITE_PAYPAL_CLIENT_ID=YOUR_PAYPAL_CLIENT_ID_HERE

# PayPal Subscription Plan IDs
# Create in: PayPal Dashboard > Products & Subscriptions
VITE_PAYPAL_PLAN_MONTHLY=P-YOUR_MONTHLY_PLAN_ID
VITE_PAYPAL_PLAN_YEARLY=P-YOUR_YEARLY_PLAN_ID

# Razorpay Configuration (for Indian customers)
# Get these from: https://dashboard.razorpay.com/app/keys
VITE_RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_ID

# Razorpay Subscription Plan IDs
# Create in: Razorpay Dashboard > Subscriptions > Plans
VITE_RAZORPAY_PLAN_MONTHLY=plan_YOUR_MONTHLY_PLAN_ID
VITE_RAZORPAY_PLAN_YEARLY=plan_YOUR_YEARLY_PLAN_ID

# Backend API URL
# Your deployed Firebase Functions or Vercel API URL
VITE_API_URL=https://your-project.cloudfunctions.net
# OR for Vercel:
# VITE_API_URL=https://your-project.vercel.app/api
